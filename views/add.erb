<html>
<body>
  
  <form method="post">
  
    Name: <input type="text" name="name"/>
    Category: 
    <select name="category">
    <% @categories.each do |category| %>
    	<option value="<%= category.id %>"><%= category.name %></option>
    <% end %>
    </select>
    Units: <input type="text" value="lb" name="units"/>
    Price: <input type="text" name="price"/>
    Available: <input type="text" name="quantity"/><br/>
    
    <input type="submit" value="Add Item"/>
  </form>
  
  <ul>
  <% @items.each do |item| %>
    <li><%= item.name %> $<%= item.price %> per <%=item.units %> <%=item.quantity %> </li>
  <% end %>
  </ul>
  
</body>
</html>